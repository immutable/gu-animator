{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/gu-player/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/gu-player",
        "main": "libs/gu-player/src/index.ts",
        "tsConfig": "libs/gu-player/tsconfig.lib.json",
        "assets": [
          "libs/gu-player/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/gu-player/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/libs/gu-player"
      ],
      "options": {
        "jestConfig": "libs/gu-player/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
